extends base.pug

block scripts
  script(src='/static/index.js')

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm")
            input(type="text" class="myInput" name="name", required, placeholder="Enter Your Name")
            input(type="phone" class="myInput" name="phone",required, placeholder="Enter Your Phone Number")
            input(type="email" class="myInput" name="email", required,  placeholder="Enter Your Email")
            input(type="text" class="myInput" name="address", required, placeholder="Enter Your Address")
            input(type="text" class="myInput" name="desc", required,  placeholder="Enter Your Concern")
            button(class="btn") 
                | Submit